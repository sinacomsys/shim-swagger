{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationDir": "types",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "./types"]
}
